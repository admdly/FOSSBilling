{% extends request.ajax ? 'layout_blank.html.twig' : 'layout_default.html.twig' %}

{% block meta_title %}{{ 'MAAS Settings'|trans }}{% endblock %}

{% set active_menu = 'system' %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ '/'|alink }}">
                <svg class="icon">
                    <use xlink:href="#home" />
                </svg>
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ 'system'|alink }}">{{ 'Settings'|trans }}</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">{{ 'MAAS Settings'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    {% set params = admin.extension_config_get({ 'ext': 'mod_servicemaas' }) %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">{{ 'MAAS API Settings'|trans }}</h3>
        </div>
        <div class="card-body">
            <form method="post" action="{{ 'api/admin/extension/config_save'|link }}" class="api-form" data-api-msg="{{ 'MAAS settings updated'|trans }}">
                <input type="hidden" name="CSRFToken" value="{{ CSRFToken }}">
                <input type="hidden" name="ext" value="mod_servicemaas">

                <div class="form-group mb-3 row">
                    <label class="form-label col-3 col-form-label">{{ 'MAAS API URL'|trans }}</label>
                    <div class="col">
                        <input class="form-control" type="text" name="maas_url" value="{{ params.maas_url }}" placeholder="http://<maas-ip>:5240/MAAS/">
                        <small class="form-hint">{{ 'The URL of the MAAS API endpoint (e.g., http://<maas-ip>:5240/MAAS/)'|trans }}</small>
                    </div>
                </div>

                <div class="form-group mb-3 row">
                    <label class="form-label col-3 col-form-label">{{ 'MAAS API Key'|trans }}</label>
                    <div class="col">
                        <input class="form-control" type="text" name="maas_api_key" value="{{ params.maas_api_key }}" placeholder="consumer_key:token_key:token_secret">
                        <small class="form-hint">{{ 'Your MAAS API key in the format consumer_key:token_key:token_secret'|trans }}</small>
                    </div>
                </div>

                <div class="card-footer text-end">
                    <button class="btn btn-primary" type="submit">{{ 'Update settings'|trans }}</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
