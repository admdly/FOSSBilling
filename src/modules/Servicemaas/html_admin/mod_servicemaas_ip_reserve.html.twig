{% extends request.ajax ? 'layout_blank.html.twig' : 'layout_default.html.twig' %}

{% block meta_title %}{{ 'Reserve IP Address'|trans }}{% endblock %}

{% set active_menu = 'maas' %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ '/'|alink }}">
                <svg class="icon">
                    <use xlink:href="#home" />
                </svg>
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ 'servicemaas'|alink }}">{{ 'MAAS'|trans }}</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ 'servicemaas/ip-management'|alink }}">{{ 'IP Management'|trans }}</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">{{ 'Reserve IP Address'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">{{ 'Reserve IP Address'|trans }}</h3>
    </div>
    <div class="card-body">
        <form method="post" action="{{ 'api/admin/servicemaas/ip_reserve'|link }}" class="api-form" data-api-redirect="{{ 'servicemaas/ip-management'|alink }}">
            <input type="hidden" name="CSRFToken" value="{{ CSRFToken }}">

            <div class="form-group mb-3 row">
                <label class="form-label col-3 col-form-label">{{ 'IP Address'|trans }}</label>
                <div class="col">
                    <input class="form-control" type="text" name="ip_address" value="">
                </div>
            </div>

            <div class="form-group mb-3 row">
                <label class="form-label col-3 col-form-label">{{ 'Subnet CIDR'|trans }}</label>
                <div class="col">
                    <input class="form-control" type="text" name="subnet" value="" placeholder="192.168.0.0/24">
                </div>
            </div>

            <div class="form-group mb-3 row">
                <label class="form-label col-3 col-form-label">{{ 'Hostname'|trans }}</label>
                <div class="col">
                    <input class="form-control" type="text" name="hostname" value="">
                </div>
            </div>

            <div class="card-footer text-end">
                <button class="btn btn-primary" type="submit">{{ 'Reserve'|trans }}</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
