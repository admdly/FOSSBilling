{% extends request.ajax ? 'layout_blank.html.twig' : 'layout_default.html.twig' %}

{% block meta_title %}{{ subnet.id ? 'Edit Subnet'|trans : 'Create Subnet'|trans }}{% endblock %}

{% set active_menu = 'maas' %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ '/'|alink }}">
                <svg class="icon">
                    <use xlink:href="#home" />
                </svg>
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ 'servicemaas'|alink }}">{{ 'MAAS'|trans }}</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ 'servicemaas/ip-management'|alink }}">{{ 'IP Management'|trans }}</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">{{ subnet.id ? 'Edit Subnet'|trans : 'Create Subnet'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">{{ subnet.id ? 'Edit Subnet'|trans : 'Create Subnet'|trans }}</h3>
    </div>
    <div class="card-body">
        <form method="post" action="{{ subnet.id ? 'api/admin/servicemaas/subnet_update' : 'api/admin/servicemaas/subnet_create'|link }}" class="api-form" data-api-redirect="{{ 'servicemaas/ip-management'|alink }}">
            <input type="hidden" name="CSRFToken" value="{{ CSRFToken }}">
            {% if subnet.id %}
                <input type="hidden" name="id" value="{{ subnet.id }}">
            {% endif %}

            <div class="form-group mb-3 row">
                <label class="form-label col-3 col-form-label">{{ 'Name'|trans }}</label>
                <div class="col">
                    <input class="form-control" type="text" name="name" value="{{ subnet.name }}">
                </div>
            </div>

            <div class="form-group mb-3 row">
                <label class="form-label col-3 col-form-label">{{ 'CIDR'|trans }}</label>
                <div class="col">
                    <input class="form-control" type="text" name="cidr" value="{{ subnet.cidr }}" placeholder="192.168.0.0/24">
                </div>
            </div>

            <div class="form-group mb-3 row">
                <label class="form-label col-3 col-form-label">{{ 'Gateway IP'|trans }}</label>
                <div class="col">
                    <input class="form-control" type="text" name="gateway_ip" value="{{ subnet.gateway_ip }}" placeholder="192.168.0.1">
                </div>
            </div>

            <div class="form-group mb-3 row">
                <label class="form-label col-3 col-form-label">{{ 'DNS Servers'|trans }}</label>
                <div class="col">
                    <input class="form-control" type="text" name="dns_servers" value="{{ subnet.dns_servers|join(' ') }}" placeholder="8.8.8.8 8.8.4.4">
                </div>
            </div>

            <div class="form-group mb-3 row">
                <label class="form-label col-3 col-form-label">{{ 'VLAN'|trans }}</label>
                <div class="col">
                    <input class="form-control" type="text" name="vlan" value="{{ subnet.vlan.name }}" placeholder="default">
                </div>
            </div>

            <div class="card-footer text-end">
                <button class="btn btn-primary" type="submit">{{ 'Save'|trans }}</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
